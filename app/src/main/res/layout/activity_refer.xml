<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ReferActivity">
    <LinearLayout
        android:layout_centerInParent="true"
        android:padding="@dimen/_50sdp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/refer_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_free_trips_to_your_family_and_friends"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_small"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_the_oxy_code_and_give_friends_and_family_free_rides_worth_up_to_25"/>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_margin="@dimen/_30sdp"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_code"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/text_medium"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OXY123456"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>