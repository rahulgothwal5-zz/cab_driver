<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    tools:context=".ui.activity.regsiter.RegisterActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/toolbar_main" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/ele_normal"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/registration_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_extra"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <EditText
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:id="@+id/etAadhar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_edittext"
                            android:hint="Aadhar Number"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="12"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_small" />

                        <EditText
                            android:layout_marginTop="@dimen/_20sdp"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/white_edittext"
                            android:elevation="@dimen/ele_normal"
                            android:imeOptions="actionNext"
                            android:hint="@string/email_id"
                            android:inputType="textAutoComplete"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:textSize="@dimen/text_small" />



                        <EditText
                            android:id="@+id/etReferralCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_edittext"
                            android:hint="@string/referral_code"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:padding="12dp"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_small" />

                    </LinearLayout>





                </LinearLayout>


                <!--                <EditText-->
                <!--                    android:id="@+id/email"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@null"-->
                <!--                    android:digits="0123456789"-->
                <!--                    android:hint="@string/mobile_no"-->
                <!--                    android:inputType="phone"-->
                <!--                    android:maxLength="10"-->
                <!--                    android:padding="12dp"-->
                <!--                    android:textColor="@color/colorPrimaryText"-->
                <!--                    android:textSize="@dimen/text_small" />-->

                <!--                <Spinner-->
                <!--                    android:id="@+id/dial_code"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:entries="@array/dial_codes"-->
                <!--                    android:spinnerMode="dialog"-->
                <!--                    tools:listitem="@layout/spinner1" />-->

            </LinearLayout>



            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/blue_buttons"
                android:elevation="@dimen/ele_normal"
                android:padding="12dp"
                android:text="@string/next"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/black_logo" />
        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>